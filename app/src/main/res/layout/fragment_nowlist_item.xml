<?xml version="1.0" encoding="utf-8" ?>
<com.daimajia.swipe.SwipeLayout
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeNowList"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp">
<LinearLayout
    android:tag="Bottom2"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/btnSiNowStar"
        android:src="@drawable/star"
        android:layout_width="70dp"
        android:background="#4cd964"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/btnSiNowDelete"
        android:src="@drawable/trash"
        android:layout_width="70dp"
        android:background="@drawable/red_background"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_height="match_parent" />
</LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/white_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/siAlbumArt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        tools:src="@drawable/si_ic_book_black_24dp"/>

    <TextView
        android:id="@+id/siSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/siAlbumArt"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/siSongArtist"
        android:layout_below="@+id/siSongName"
        android:layout_alignLeft="@+id/siSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp" />

    <Button
        android:visibility="invisible"
        android:id="@+id/btnPlayThis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

<!-- just a divider -->
<View android:background="@color/si_divider"
    android:layout_width="fill_parent"
    android:layout_height="0.5dp" />

</com.daimajia.swipe.SwipeLayout>